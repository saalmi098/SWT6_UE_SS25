<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- BeanFactory erzeugt die Beans ueber das Konfigurationsfile (vergleichbar mit ApplicationContext) -->

    <bean id="greetingService" class="swt6.spring.basics.hello.GreetingServiceImpl">
        <property name="message" value="Hello SWT6 (V1)"/>
    </bean>

</beans>